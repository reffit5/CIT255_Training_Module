<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Training_Module</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/Themes/Grocery-Theme.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div><h1>Grocery List App</h1></div>
    <nav class="navbar navbar-default" >
        
        <div>
            <ul class="nav nav-pills">
                <li class="navbar-brand">
                    <a asp-action="index" asp-controller="Grocery" class="nav-link"> Back To List</a>
                </li>
                <li class="navbar-brand">
                    <a asp-action="create" asp-controller="Grocery" class="nav-link">Add Item</a>
                </li>

            </ul>
        </div>
    </nav> 
    <div>
        @RenderBody()
    </div>
</body>
</html>
